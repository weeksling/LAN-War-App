<resources>

    <style name="AppTheme" parent="MyMaterialTheme.Base" />

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/ebgTextViewStyle</item>
        <item name="android:buttonStyle">@style/blackOpsButtonTheme</item>
        <item name="android:windowBackground">@drawable/background_gradient</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="ebgTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/ebgaramondmedium</item>
    </style>

    <style name="blackOpsButtonTheme" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/black_ops_one</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
